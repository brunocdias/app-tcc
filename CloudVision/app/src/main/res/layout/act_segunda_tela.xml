<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.google.sample.cloudvision.ActSegundaTela"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <TextView
        android:id="@+id/txtTarget"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/btnResultado"
        app:layout_constraintRight_toRightOf="@+id/txtFala01"
        android:layout_marginTop="35dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="31dp"
        app:layout_constraintLeft_toLeftOf="@+id/txtFala01"
        app:layout_constraintTop_toTopOf="@+id/txtResultado" />

    <TextView
        android:id="@+id/txtSource"
        android:layout_width="210dp"
        android:layout_height="35dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="136dp"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@+id/btnResultado"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />



    <TextView
        android:id="@+id/txtResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/resultado"
        android:layout_marginStart="16dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="17dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnResultado"
        android:layout_width="113dp"
        android:layout_height="51dp"
        android:onClick="mTraducao"
        android:text="@string/btn_resultado"
        android:layout_marginStart="16dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtSource"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/txtFala"
        android:layout_width="312dp"
        android:layout_height="43dp"
        android:text="@string/fala"
        android:layout_marginStart="16dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/txtFala02"
        android:layout_marginTop="92dp"
        app:layout_constraintTop_toBottomOf="@+id/txtSource"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="92dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/txtFala01"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:textSize="20sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/btnSpeak02"
        app:layout_constraintRight_toRightOf="@+id/txtFala02"
        android:layout_marginTop="7dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="5dp"
        app:layout_constraintLeft_toLeftOf="@+id/txtFala02"
        app:layout_constraintTop_toTopOf="@+id/btnSpeak01" />

    <TextView
        android:id="@+id/txtFala02"
        android:layout_width="200dp"
        android:layout_height="42dp"
        android:textSize="20sp"
        android:layout_marginStart="38dp"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="71dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/txtFala03"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:textSize="20sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/txtFala02"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/btnSpeak02"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="15dp"
        app:layout_constraintLeft_toLeftOf="@+id/txtFala02"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/btnSpeak01"
        android:layout_width="52dp"
        android:layout_height="48dp"
        android:background="@drawable/ico_mic"
        android:layout_marginEnd="50dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/btnSpeak02"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="6dp" />

    <ImageButton
        android:id="@+id/btnSpeak02"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/ico_mic"

        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/btnSpeak03"
        app:layout_constraintRight_toRightOf="@+id/btnSpeak01"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/btnSpeak01" />

    <ImageButton
        android:id="@+id/btnSpeak03"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/ico_mic"

        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/btnSpeak02"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/txtFala02"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/btnSpeak02"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0" />


</android.support.constraint.ConstraintLayout>
