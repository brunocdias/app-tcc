<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.google.sample.cloudvision.ActSegundaTela"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">



        <TextView
            android:id="@+id/txtTarget"
            android:layout_width="265dp"
            android:layout_height="50dp"
            android:layout_marginStart="47dp"
            android:layout_marginTop="33dp"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintTop_creator="1" />

        <TextView
            android:id="@+id/txtSource"
            android:layout_width="0dp"
            android:layout_height="47dp"
            android:layout_marginTop="67dp"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="@+id/txtTarget"
            app:layout_constraintRight_toRightOf="@+id/txtTarget"
            app:layout_constraintTop_toTopOf="@+id/txtTarget"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1"
            app:layout_constraintHorizontal_bias="0.551" />

        <ImageButton
            android:id="@+id/btnSpeak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="69dp"
            android:layout_marginStart="69dp"
            android:layout_marginTop="96dp"
            android:background="@null"
            android:src="@drawable/ico_mic"
            app:layout_constraintLeft_toLeftOf="@+id/txtSource"
            app:layout_constraintTop_toBottomOf="@+id/txtSource"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintTop_creator="1" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="94dp"
            android:layout_marginStart="94dp"
            android:layout_marginTop="13dp"
            android:text="@string/tap_on_mic"
            android:textSize="15dp"
            android:textStyle="normal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnSpeak"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/txtFala"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/btnSpeak"
        app:layout_constraintRight_toRightOf="@+id/txtSource"
        android:layout_marginTop="29dp"
        app:layout_constraintTop_toBottomOf="@+id/txtSource"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="14dp"
        app:layout_constraintLeft_toLeftOf="@+id/txtTarget" />


</android.support.constraint.ConstraintLayout>
